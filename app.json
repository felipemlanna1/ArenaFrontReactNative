{
  "expo": {
    "name": "Arena",
    "slug": "arena-app",
    "version": "1.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "scheme": "arena",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1B1D29"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.arena.app",
      "jsEngine": "hermes",
      "associatedDomains": [
        "applinks:backsportpulsemobile-production.up.railway.app"
      ],
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true,
          "NSExceptionDomains": {
            "backsportpulsemobile-production.up.railway.app": {
              "NSExceptionAllowsInsecureHTTPLoads": false,
              "NSIncludesSubdomains": true,
              "NSExceptionRequiresForwardSecrecy": true,
              "NSExceptionMinimumTLSVersion": "TLSv1.2"
            }
          }
        },
        "NSLocationWhenInUseUsageDescription": "Arena precisa acessar sua localização para mostrar eventos próximos a você.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Arena precisa acessar sua localização para mostrar eventos próximos a você."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "versionCode": 5,
      "edgeToEdgeEnabled": true,
      "jsEngine": "hermes",
      "package": "com.arena.app",
      "softwareKeyboardLayoutMode": "resize",
      "navigationBar": {
        "visible": "sticky-immersive",
        "backgroundColor": "#1B1D29",
        "barStyle": "light-content"
      },
      "permissions": [
        "INTERNET",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "POST_NOTIFICATIONS",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "arena",
              "host": "*"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        },
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "backsportpulsemobile-production.up.railway.app",
              "pathPrefix": "/event"
            },
            {
              "scheme": "https",
              "host": "backsportpulsemobile-production.up.railway.app",
              "pathPrefix": "/group"
            },
            {
              "scheme": "https",
              "host": "backsportpulsemobile-production.up.railway.app",
              "pathPrefix": "/profile"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/BebasNeue-Regular.ttf",
            "./assets/fonts/Calibri-Regular.ttf",
            "./assets/fonts/Inter-Regular.ttf",
            "./assets/fonts/Inter-Medium.ttf",
            "./assets/fonts/Inter-SemiBold.ttf",
            "./assets/fonts/Inter-Bold.ttf"
          ]
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Arena precisa acessar sua localização para mostrar eventos próximos a você.",
          "locationWhenInUsePermission": "Arena precisa acessar sua localização para mostrar eventos próximos a você."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#FF5301",
          "sounds": []
        }
      ]
    ],
    "extra": {
      "ENVIRONMENT": "production",
      "eas": {
        "projectId": "ae9ae6e3-e3f6-4cda-949f-f073d0b44b3b"
      }
    },
    "owner": "felipemlanna1",
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/ae9ae6e3-e3f6-4cda-949f-f073d0b44b3b"
    }
  }
}
