{
  "expo": {
    "name": "Arena",
    "slug": "arena-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.arena.app",
      "jsEngine": "hermes",
      "infoPlist": {
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true,
          "NSExceptionDomains": {
            "backsportpulsemobile-961c.onrender.com": {
              "NSExceptionAllowsInsecureHTTPLoads": false,
              "NSIncludesSubdomains": true,
              "NSExceptionRequiresForwardSecrecy": true,
              "NSExceptionMinimumTLSVersion": "TLSv1.2"
            }
          }
        },
        "NSLocationWhenInUseUsageDescription": "Arena precisa acessar sua localização para mostrar eventos próximos a você.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Arena precisa acessar sua localização para mostrar eventos próximos a você."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "jsEngine": "hermes",
      "package": "com.arena.app",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION"
      ],
      "usesCleartextTraffic": true
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/BebasNeue-Regular.ttf",
            "./assets/fonts/Calibri-Regular.ttf"
          ]
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Arena precisa acessar sua localização para mostrar eventos próximos a você.",
          "locationWhenInUsePermission": "Arena precisa acessar sua localização para mostrar eventos próximos a você."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "arena-project-id"
      },
      "ENVIRONMENT": "development"
    }
  }
}
