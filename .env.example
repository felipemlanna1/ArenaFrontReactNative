# Arena Mobile - Environment Configuration Template
# Copy this file to .env and fill in your values

# API Configuration
# Para uso no simulador: http://localhost:3000/api/v1
# Para uso no celular f√≠sico: http://SEU_IP_LOCAL:3000/api/v1
# Descobrir IP local: Mac/Linux: ifconfig | grep "inet " | Windows: ipconfig
API_URL=http://localhost:3000/api/v1
EXPO_PUBLIC_API_URL=http://localhost:3000
API_TIMEOUT=30000

# Authentication
AUTH_TOKEN_KEY=@arena:auth_token
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRES_IN=7d

# Database (Backend)
DATABASE_URL=postgresql://user:password@localhost:5432/database_name
DATABASE_SSL=false

# Supabase Configuration (for profile picture upload)
EXPO_PUBLIC_SUPABASE_URL=your_supabase_url
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# OAuth (Social Login)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
APPLE_CLIENT_ID=your_apple_client_id
APPLE_TEAM_ID=your_apple_team_id
APPLE_KEY_ID=your_apple_key_id
APPLE_PRIVATE_KEY=your_apple_private_key

# Push Notifications - Firebase (FCM)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email
FIREBASE_DATABASE_URL=your_firebase_database_url

# Push Notifications - Apple (APNS)
APNS_KEY_ID=your_apns_key_id
APNS_TEAM_ID=your_apns_team_id
APNS_BUNDLE_ID=com.arena.sportpulse
APNS_KEY_PATH=./certs/apns-key.p8

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# AWS S3 (for media storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=your_aws_region
AWS_S3_BUCKET=your_s3_bucket

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM="Arena" <noreply@arena.com>
EMAIL_PREVIEW=false

# Application
NODE_ENV=development
ENVIRONMENT=development
FRONTEND_URL=http://localhost:3000
PORT=3000
API_PREFIX=api/v1

# CORS
CORS_ORIGIN=http://localhost:3000

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_KEY=your_analytics_key_here

# Bull Board Dashboard
BULL_BOARD_USER=admin
BULL_BOARD_PASSWORD=your_dashboard_password
# Google OAuth Configuration
EXPO_PUBLIC_GOOGLE_WEB_CLIENT_ID=your-web-client-id.apps.googleusercontent.com
EXPO_PUBLIC_GOOGLE_ANDROID_CLIENT_ID=your-android-client-id.apps.googleusercontent.com
EXPO_PUBLIC_GOOGLE_IOS_CLIENT_ID=your-ios-client-id.apps.googleusercontent.com
